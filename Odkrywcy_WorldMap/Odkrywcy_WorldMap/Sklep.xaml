<Page x:Class="Odkrywcy_WorldMap.Sklep"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Odkrywcy_WorldMap"
      mc:Ignorable="d" 
      Background="Gray"
      Title="Sklep">

    <Grid Width="1400" Height="750">
        <StackPanel>
            <TextBlock Text="Sklep" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <WrapPanel Margin="20" HorizontalAlignment="Center">

                    <!-- Produkt 1 -->
                    <Border BorderThickness="2" BorderBrush="Black" CornerRadius="10" Padding="10" Margin="10" Width="200">
                        <StackPanel>
                            <Image Source="Images/lion.jpg" Height="120" Stretch="UniformToFill"/>
                            <TextBlock Text="Lew" FontSize="18" FontWeight="Bold" Margin="5"/>
                            <TextBlock Text="Kontynent: Afryka" FontSize="14" Margin="5"/>
                            <TextBlock Text="Cena: 500 zł" FontSize="16" FontWeight="Bold" Margin="5"/>
                            <Button Content="Kup" Background="Green" Foreground="White" Margin="5" Padding="5"/>
                        </StackPanel>
                    </Border>

                    <!-- Produkt 2 -->
                    <Border BorderThickness="2" BorderBrush="Black" CornerRadius="10" Padding="10" Margin="10" Width="200">
                        <StackPanel>
                            <Image Source="Images/panda.jpg" Height="120" Stretch="UniformToFill"/>
                            <TextBlock Text="Panda" FontSize="18" FontWeight="Bold" Margin="5"/>
                            <TextBlock Text="Kontynent: Azja" FontSize="14" Margin="5"/>
