                        <StackPanel>
                            <Image Source="Images/jaguar.jpg" Height="120" Stretch="UniformToFill"/>
                            <TextBlock Text="Jaguar" FontSize="18" FontWeight="Bold" Margin="5"/>
                            <TextBlock Text="Kontynent: Ameryka Południowa" FontSize="14" Margin="5"/>
                            <TextBlock Text="Cena: 720 zł" FontSize="16" FontWeight="Bold" Margin="5"/>
