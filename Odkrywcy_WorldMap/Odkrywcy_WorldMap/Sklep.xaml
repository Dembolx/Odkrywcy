                    </Border>

                    <!-- Produkt 5 -->
                    <Border BorderThickness="2" BorderBrush="Black" CornerRadius="10" Padding="10" Margin="10" Width="200">
                        <StackPanel>
                            <Image Source="Images/pingwin.jpg" Height="120" Stretch="UniformToFill"/>
                            <TextBlock Text="Pingwin" FontSize="18" FontWeight="Bold" Margin="5"/>
                            <TextBlock Text="Kontynent: Antarktyda" FontSize="14" Margin="5"/>
                            <TextBlock Text="Cena: 550 zł" FontSize="16" FontWeight="Bold" Margin="5"/>
                            <Button Content="Kup" Background="Green" Foreground="White" Margin="5" Padding="5"/>
                        </StackPanel>
                    </Border>

                    <!-- Produkt 6 -->
                    <Border BorderThickness="2" BorderBrush="Black" CornerRadius="10" Padding="10" Margin="10" Width="200">
