      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Odkrywcy_WorldMap"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1400"
